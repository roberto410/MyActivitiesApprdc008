<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="5dp"
    android:clickable="true">


    <TextView
        android:id="@+id/list_item_ma_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="Crime Title" />

    <TextView
        android:id="@+id/list_item_ma_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_ma_title_text_view"
        android:allowUndo="false"
        android:padding="4dp"
        tools:text="Crime Date" />

    <TextView
        android:id="@+id/list_item_ma_location_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_ma_date_text_view"
        android:allowUndo="false"
        android:padding="4dp"
        tools:text="Crime Location" />

</RelativeLayout>